<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Linlapse.ViewModels"
        xmlns:models="using:Linlapse.Models"
        xmlns:services="using:Linlapse.Services"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Linlapse.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Linlapse - Game Launcher"
        Width="1200" Height="700"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#818cf8"/>
        </Style>
        <Style Selector="Button.primary:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="#4b4b6b"/>
            <Setter Property="Foreground" Value="#71717a"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#a1a1aa"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#27272a"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="#dc2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#ef4444"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#3b3b5c"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2a2a40"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#16162a" Padding="16">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Logo/Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="ðŸŽ® Linlapse" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Linux Game Launcher"
                               FontSize="12"
                               Foreground="#71717a"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Game List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Games}"
                         SelectedItem="{Binding SelectedGame}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="models:GameInfo">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Background="#3b3b5c"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽ¯" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="18"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock FontSize="11" Foreground="#71717a">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} â€¢ {1}">
                                                <Binding Path="Region"/>
                                                <Binding Path="State"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                <Border Grid.Column="2"
                                        IsVisible="{Binding IsInstalled}"
                                        Background="#22c55e"
                                        CornerRadius="4"
                                        Padding="6,2">
                                    <TextBlock Text="âœ“" FontSize="10" Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="2" Spacing="8">
                    <Button Content="âŸ³ Refresh Games" 
                            Classes="secondary"
                            HorizontalAlignment="Stretch"
                            Command="{Binding RefreshGamesCommand}"/>
                    <TextBlock Text="{Binding WineVersion}"
                               FontSize="11"
                               Foreground="#52525b"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Game Details Panel -->
            <Border Grid.Row="0" 
                    Margin="24"
                    CornerRadius="16"
                    ClipToBounds="True">
                <Grid>
                    <!-- Background Gradient -->
                    <Border Background="Linear Gradient(135deg, #2d2d5a 0%, #1a1a2e 100%)"
                            Opacity="0.95"/>
                    
                    <!-- Content when game is selected -->
                    <Grid IsVisible="{Binding SelectedGame, Converter={x:Static ObjectConverters.IsNotNull}}"
                          Margin="32">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Game Info -->
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedGame.DisplayName}"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,16,0,0" Spacing="16">
                                <Border Background="#3b3b5c" CornerRadius="6" Padding="12,6">
                                    <TextBlock Foreground="#a1a1aa">
                                        <Run Text="Region: "/>
                                        <Run Text="{Binding SelectedGame.Region}" Foreground="White"/>
                                    </TextBlock>
                                </Border>
                                <Border Background="#3b3b5c" CornerRadius="6" Padding="12,6">
                                    <TextBlock Foreground="#a1a1aa">
                                        <Run Text="Status: "/>
                                        <Run Text="{Binding SelectedGame.State}" Foreground="White"/>
                                    </TextBlock>
                                </Border>
                                <Border Background="#3b3b5c" CornerRadius="6" Padding="12,6"
                                        IsVisible="{Binding SelectedGame.IsInstalled}">
                                    <TextBlock Foreground="#a1a1aa">
                                        <Run Text="Version: "/>
                                        <Run Text="{Binding SelectedGame.Version, FallbackValue='Unknown'}" Foreground="White"/>
                                    </TextBlock>
                                </Border>
                                <!-- Download size for non-installed games -->
                                <Border Background="#3b3b5c" CornerRadius="6" Padding="12,6"
                                        IsVisible="{Binding !SelectedGame.IsInstalled}">
                                    <TextBlock Foreground="#a1a1aa">
                                        <Run Text="Download: "/>
                                        <Run Text="{Binding DownloadSizeText, FallbackValue='Checking...'}" Foreground="White"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            
                            <!-- Update Available Banner -->
                            <Border Background="#854d0e" 
                                    CornerRadius="8" 
                                    Padding="16,12"
                                    Margin="0,16,0,0"
                                    IsVisible="{Binding AvailableUpdate.HasUpdate, FallbackValue=False}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Update Available!" FontWeight="SemiBold" Foreground="#fef08a"/>
                                        <TextBlock Foreground="#fde047" FontSize="12">
                                            <Run Text="New version: "/>
                                            <Run Text="{Binding AvailableUpdate.LatestVersion}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Grid.Column="1" 
                                            Content="Update Now" 
                                            Classes="primary"
                                            Command="{Binding ApplyUpdateCommand}"/>
                                </Grid>
                            </Border>

                            <!-- Download Info for non-installed games -->
                            <Border Background="#1e3a5f" 
                                    CornerRadius="8" 
                                    Padding="16,12"
                                    Margin="0,16,0,0"
                                    IsVisible="{Binding DownloadInfo, Converter={x:Static ObjectConverters.IsNotNull}}">
                                <StackPanel>
                                    <TextBlock Text="Download Information" FontWeight="SemiBold" Foreground="#93c5fd" Margin="0,0,0,8"/>
                                    <TextBlock Foreground="#71717a" FontSize="12">
                                        <Run Text="Version: "/>
                                        <Run Text="{Binding DownloadInfo.Version}" Foreground="#93c5fd"/>
                                    </TextBlock>
                                    <TextBlock Foreground="#71717a" FontSize="12" Margin="0,4,0,0">
                                        <Run Text="Size: "/>
                                        <Run Text="{Binding DownloadSizeText}" Foreground="#93c5fd"/>
                                    </TextBlock>
                                    <TextBlock Foreground="#71717a" FontSize="12" Margin="0,4,0,0"
                                               IsVisible="{Binding DownloadInfo.VoicePacks.Count}">
                                        <Run Text="Voice packs available: "/>
                                        <Run Text="{Binding DownloadInfo.VoicePacks.Count}" Foreground="#93c5fd"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Cache Info -->
                            <Border Background="#27272a" 
                                    CornerRadius="8" 
                                    Padding="16,12"
                                    Margin="0,16,0,0"
                                    IsVisible="{Binding CacheInfo, Converter={x:Static ObjectConverters.IsNotNull}}">
                                <StackPanel>
                                    <TextBlock Text="Cache Information" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                                    <TextBlock Foreground="#71717a" FontSize="12">
                                        <Run Text="Total cache size: "/>
                                        <Run Text="{Binding CacheInfo.TotalSize, StringFormat='{}{0:N0} bytes'}" Foreground="#a1a1aa"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding CacheInfo.TotalFiles}" Foreground="#a1a1aa"/>
                                        <Run Text=" files)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            <TextBlock Text="{Binding SelectedGame.InstallPath}"
                                       IsVisible="{Binding SelectedGame.IsInstalled}"
                                       Foreground="#52525b"
                                       FontSize="12"
                                       Margin="0,16,0,0"/>
                        </StackPanel>

                        <!-- Progress Bar -->
                        <StackPanel Grid.Row="1" 
                                    Margin="0,16,0,0"
                                    IsVisible="{Binding IsDownloading}">
                            <ProgressBar Value="{Binding ProgressPercent}"
                                         Maximum="100"
                                         Height="8"
                                         CornerRadius="4"
                                         Background="#3f3f46"
                                         Foreground="#6366f1"/>
                            <Grid Margin="0,8,0,0">
                                <TextBlock Text="{Binding ProgressText}"
                                           Foreground="#a1a1aa"
                                           FontSize="12"/>
                                <Button Content="Cancel"
                                        Classes="secondary"
                                        HorizontalAlignment="Right"
                                        Command="{Binding CancelDownloadCommand}"
                                        Padding="8,4"/>
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    Spacing="12"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Left">
                            <!-- Launch Button (for installed games) -->
                            <Button Classes="primary"
                                    Command="{Binding LaunchGameCommand}"
                                    IsVisible="{Binding SelectedGame.IsInstalled}"
                                    IsEnabled="{Binding !IsGameRunning}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="â–¶"/>
                                    <TextBlock Text="Launch Game"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Install Button (for non-installed games) -->
                            <Button Classes="primary"
                                    Command="{Binding InstallGameCommand}"
                                    IsVisible="{Binding !SelectedGame.IsInstalled}"
                                    IsEnabled="{Binding !IsDownloading}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ“¥"/>
                                    <TextBlock Text="Install Game"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Stop Button -->
                            <Button Classes="danger"
                                    IsVisible="{Binding IsGameRunning}"
                                    Command="{Binding StopGameCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="â¹"/>
                                    <TextBlock Text="Stop Game"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Repair Button -->
                            <Button Classes="secondary"
                                    IsVisible="{Binding SelectedGame.IsInstalled}"
                                    Command="{Binding RepairGameCommand}"
                                    IsEnabled="{Binding !IsRepairing}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ”§"/>
                                    <TextBlock Text="Verify Files"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Clear Cache Button -->
                            <Button Classes="secondary"
                                    IsVisible="{Binding SelectedGame.IsInstalled}"
                                    Command="{Binding ClearCacheCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ—‘"/>
                                    <TextBlock Text="Clear Cache"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Check Updates Button -->
                            <Button Classes="secondary"
                                    IsVisible="{Binding SelectedGame.IsInstalled}"
                                    Command="{Binding CheckForUpdatesCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ”„"/>
                                    <TextBlock Text="Check Updates"/>
                                </StackPanel>
                            </Button>

                            <!-- Preload Button -->
                            <Button Classes="secondary"
                                    IsVisible="{Binding SelectedGame.IsInstalled}"
                                    Command="{Binding DownloadPreloadCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ“¥"/>
                                    <TextBlock Text="Preload"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Placeholder when no game is selected -->
                    <StackPanel IsVisible="{Binding SelectedGame, Converter={x:Static ObjectConverters.IsNull}}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŽ®" FontSize="64" HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a game from the sidebar"
                                   FontSize="18"
                                   Foreground="#71717a"
                                   Margin="0,16,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="1" Background="#16162a" Padding="16,8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusMessage}"
                               Foreground="#71717a"
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                        <ProgressBar IsVisible="{Binding IsLoading}"
                                     IsIndeterminate="True"
                                     Width="100"/>
                        <TextBlock Text="{Binding AppVersion, StringFormat='v{0}'}"
                                   Foreground="#52525b"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
